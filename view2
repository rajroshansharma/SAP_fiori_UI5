**************************Controller******************************view1.controller.js
sap.ui.define([
    "sap/ui/core/mvc/Controller"
], function (Controller) {
    "use strict";

    return Controller.extend("session1.demosession1.controller.View1", {
        onInit: function () {
            // Initialization logic here
        },

        onPressLoadJSONModel: function () {
            var that = this;
            that.getView().byId("idInvoiceList").setVisible(true)
            var oModel = this.getOwnerComponent().getModel("NorthwindODataModel");
            oModel.read("/Invoices", {
                success: function (oData) {
                    debugger;
                    that.getOwnerComponent().getModel("InvoicesJSONModel").setData(oData);
                },
                error: function (oError) {
                    // Handle error here
                }
            });
        }
    });
});
